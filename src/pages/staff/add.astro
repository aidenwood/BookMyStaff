---
import Layout from '../../layouts/Layout.astro'
import Header from '../../components/Layout/Header'
import ProtectedRoute from '../../components/Auth/ProtectedRoute'
---

<Layout title="Add Staff Member">
  <Header client:load />
  <ProtectedRoute requiredRole="business_owner" client:load>
    <div class="min-h-screen bg-gray-50">
      <div class="max-w-3xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h1 class="text-4xl font-bold text-gray-900 mb-4">
            Add New Staff Member
          </h1>
          <p class="text-xl text-gray-600">
            Invite a team member to join your business
          </p>
        </div>

        <div class="bg-white rounded-lg shadow p-8">
          <form class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                  First Name *
                </label>
                <input
                  type="text"
                  class="w-full px-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                  placeholder="John"
                  required
                />
              </div>

              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                  Last Name *
                </label>
                <input
                  type="text"
                  class="w-full px-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                  placeholder="Smith"
                  required
                />
              </div>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                Email Address *
              </label>
              <input
                type="email"
                class="w-full px-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                placeholder="john.smith@example.com"
                required
              />
              <p class="text-sm text-gray-500 mt-1">They'll receive an invitation email to join</p>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                Phone Number
              </label>
              <input
                type="tel"
                class="w-full px-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                placeholder="+61 XXX XXX XXX"
              />
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                Role *
              </label>
              <select class="w-full px-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                <option value="">Select a role</option>
                <option value="staff">Staff Member</option>
                <option value="manager">Team Manager</option>
                <option value="admin">Administrator</option>
              </select>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                Service Regions *
              </label>
              <div class="space-y-2">
                <label class="flex items-center">
                  <input type="checkbox" class="rounded border-gray-300 text-primary-600 focus:ring-primary-500" />
                  <span class="ml-2 text-sm text-gray-700">North Region</span>
                </label>
                <label class="flex items-center">
                  <input type="checkbox" class="rounded border-gray-300 text-primary-600 focus:ring-primary-500" />
                  <span class="ml-2 text-sm text-gray-700">South Region</span>
                </label>
                <label class="flex items-center">
                  <input type="checkbox" class="rounded border-gray-300 text-primary-600 focus:ring-primary-500" />
                  <span class="ml-2 text-sm text-gray-700">East Region</span>
                </label>
                <label class="flex items-center">
                  <input type="checkbox" class="rounded border-gray-300 text-primary-600 focus:ring-primary-500" />
                  <span class="ml-2 text-sm text-gray-700">West Region</span>
                </label>
              </div>
              <p class="text-sm text-gray-500 mt-1">Select the regions this staff member can work in</p>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                Skills & Certifications
              </label>
              <textarea
                class="w-full px-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                rows="3"
                placeholder="List any relevant skills, certifications, or specializations..."
              ></textarea>
            </div>

            <div class="flex items-center">
              <input type="checkbox" class="rounded border-gray-300 text-primary-600 focus:ring-primary-500" required />
              <label class="ml-2 text-sm text-gray-700">
                Send invitation email to this staff member
              </label>
            </div>

            <div class="flex justify-end space-x-4 pt-6 border-t">
              <button
                type="button"
                class="px-6 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-colors"
                onclick="window.history.back()"
              >
                Cancel
              </button>
              <button
                type="submit"
                class="px-6 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors"
              >
                Add Staff Member
              </button>
            </div>
          </form>
        </div>

        <div class="mt-8 p-4 bg-blue-50 border border-blue-200 rounded-lg">
          <h3 class="font-semibold text-blue-900 mb-2">What happens next?</h3>
          <ul class="space-y-1 text-sm text-blue-800">
            <li>• An invitation email will be sent to the staff member</li>
            <li>• They'll create their account and set their availability</li>
            <li>• You can assign them to bookings in their selected regions</li>
            <li>• They'll have access to their schedule and customer information</li>
          </ul>
        </div>
      </div>
    </div>
  </ProtectedRoute>
</Layout>