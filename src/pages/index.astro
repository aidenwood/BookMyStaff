---
export const prerender = true;

import Layout from '../layouts/Layout.astro';
import DemoAccordion from '../components/DemoAccordion';
import '../styles/global.css';
---

<Layout title="BookMyStaff - Professional Booking Platform for Mobile Businesses">
  <div class="min-h-screen bg-background">
    <!-- Top Navigation Header -->
    <header class="sticky top-0 z-50 w-full border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60">
      <div class="container flex h-14 items-center">
        <!-- Left: Logo and Navigation -->
        <div class="mr-4 flex">
          <!-- Logo -->
          <a class="mr-6 flex items-center space-x-2" href="/">
            <svg class="h-6 w-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 2L12 12l-5-5-5 5"/>
            </svg>
            <span class="font-bold">BookMyStaff</span>
          </a>
          
          <!-- Navigation Links -->
          <nav class="flex items-center space-x-6 text-sm font-medium">
            <a class="transition-colors hover:text-foreground/80 text-foreground/60" href="#features">Features</a>
            <a class="transition-colors hover:text-foreground/80 text-foreground/60" href="/pricing">Pricing</a>
            <a class="transition-colors hover:text-foreground/80 text-foreground/60" href="/contact">Contact</a>
            <a class="transition-colors hover:text-foreground/80 text-foreground/60" href="/auth">Login</a>
          </nav>
        </div>
        
        <!-- Right: Search, GitHub, Theme Toggle -->
        <div class="flex flex-1 items-center justify-between space-x-2 md:justify-end">
          <div class="w-full flex-1 md:w-auto md:flex-none">
            <!-- Search -->
            <button class="inline-flex items-center rounded-md font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 border border-input bg-background shadow-sm hover:bg-accent hover:text-accent-foreground h-9 px-4 py-2 relative w-full justify-start text-sm text-muted-foreground sm:pr-12 md:w-40 lg:w-64">
              <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
              <span class="hidden lg:inline-flex">Search documentation...</span>
              <span class="inline-flex lg:hidden">Search...</span>
              <kbd class="pointer-events-none absolute right-1.5 top-1.5 hidden h-5 select-none items-center gap-1 rounded border bg-muted px-1.5 font-mono text-[10px] font-medium opacity-100 sm:flex">
                <span class="text-xs">⌘</span>K
              </kbd>
            </button>
          </div>
          
          <nav class="flex items-center space-x-1">
            <!-- GitHub Button -->
            <button class="inline-flex items-center justify-center rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 hover:bg-accent hover:text-accent-foreground h-8 w-8">
              <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
            </button>
            <span class="text-sm text-muted-foreground">100.5k</span>
            
            <!-- Theme Toggle -->
            <button id="theme-toggle" class="inline-flex items-center justify-center rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 hover:bg-accent hover:text-accent-foreground h-8 w-8">
              <svg id="sun-icon" class="h-4 w-4 dark:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <circle cx="12" cy="12" r="5"/>
                <path d="M12 1v2M12 21v2M4.2 4.2l1.4 1.4M18.4 18.4l1.4 1.4M1 12h2M21 12h2M4.2 19.8l1.4-1.4M18.4 5.6l1.4-1.4"/>
              </svg>
              <svg id="moon-icon" class="h-4 w-4 hidden dark:block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>
              </svg>
            </button>
          </nav>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="flex-1">
      <!-- Hero Section -->
      <section class="container grid items-center gap-6 pb-8 pt-6 md:py-10">
        <div class="flex max-w-[980px] mx-auto flex-col items-center text-center gap-2">
          <!-- Badge -->
          <div class="inline-flex items-center rounded-lg bg-muted px-3 py-1 text-sm font-medium">
            <span class="w-2 h-2 bg-green-500 rounded-full mr-2"></span>
            Now available for mobile businesses →
          </div>
          
          <!-- Main Headline -->
          <h1 class="text-3xl font-bold leading-tight tracking-tighter md:text-4xl lg:text-5xl">
            Smart booking for
            <span class="bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent"> mobile teams</span>
          </h1>
          
          <!-- Description -->
          <p class="max-w-[700px] text-lg text-muted-foreground">
            Coordinate staff across regions, maximize efficiency, and scale your mobile service business with intelligent scheduling.
          </p>
        </div>
        
        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/setup" class="inline-flex items-center justify-center rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground shadow hover:bg-primary/90 h-10 px-4 py-2">
            Start Free Trial
          </a>
          <a href="#features" class="inline-flex items-center justify-center rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 border border-input bg-background shadow-sm hover:bg-accent hover:text-accent-foreground h-10 px-4 py-2">
            View Features
          </a>
        </div>
      </section>

      <!-- Features Demo Section -->
      <section id="features" class="container py-20">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-foreground mb-4">
            See how it works
          </h2>
          <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
            Explore the key features that make BookMyStaff the perfect solution for mobile businesses.
          </p>
        </div>
        
        <div class="max-w-4xl mx-auto">
          <DemoAccordion client:load />
        </div>
      </section>

      <!-- Social Proof -->
      <section class="container py-16">
        <div class="text-center mb-12">
          <p class="text-muted-foreground text-lg mb-8">Trusted by mobile businesses across Australia</p>
          <div class="grid grid-cols-2 md:grid-cols-4 gap-8 items-center opacity-60">
            <div class="text-center">
              <div class="font-bold text-2xl text-foreground">200+</div>
              <div class="text-sm text-muted-foreground">Active Businesses</div>
            </div>
            <div class="text-center">
              <div class="font-bold text-2xl text-foreground">50k+</div>
              <div class="text-sm text-muted-foreground">Bookings Managed</div>
            </div>
            <div class="text-center">
              <div class="font-bold text-2xl text-foreground">85%</div>
              <div class="text-sm text-muted-foreground">Efficiency Increase</div>
            </div>
            <div class="text-center">
              <div class="font-bold text-2xl text-foreground">4.9★</div>
              <div class="text-sm text-muted-foreground">Average Rating</div>
            </div>
          </div>
        </div>
      </section>

      <!-- Call to Action -->
      <section class="bg-muted py-20">
        <div class="container max-w-4xl text-center">
          <h2 class="text-3xl md:text-4xl font-bold text-foreground mb-6">
            Ready to get started?
          </h2>
          <p class="text-xl text-muted-foreground mb-8 max-w-2xl mx-auto">
            Join mobile businesses already using BookMyStaff to coordinate teams and maximize efficiency.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/setup" class="inline-flex items-center justify-center rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground shadow hover:bg-primary/90 h-10 px-4 py-2">
              Start free trial
            </a>
            <a href="#features" class="inline-flex items-center justify-center rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 border border-input bg-background shadow-sm hover:bg-accent hover:text-accent-foreground h-10 px-4 py-2">
              Learn more
            </a>
          </div>
          <p class="text-sm text-muted-foreground mt-6">No credit card required • 14-day free trial</p>
        </div>
      </section>
    </main>
  </div>

  <!-- Command Palette -->
  <div id="command-palette" class="fixed inset-0 z-50 hidden bg-background/80 backdrop-blur-sm">
    <div class="fixed left-[50%] top-[50%] z-50 grid w-full max-w-lg translate-x-[-50%] translate-y-[-50%] gap-4 border bg-background p-6 shadow-lg duration-200 sm:rounded-lg">
      <div class="flex items-center space-x-2">
        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
        <input class="flex h-9 w-full rounded-md border border-input bg-background px-3 py-1 text-sm shadow-sm transition-colors file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:cursor-not-allowed disabled:opacity-50" placeholder="Type a command or search..." />
      </div>
      <div class="max-h-[300px] overflow-y-auto">
        <div class="space-y-1">
          <div class="px-2 py-1.5 text-xs font-medium text-muted-foreground">Suggestions</div>
          <div class="relative flex cursor-default select-none items-center rounded-sm px-2 py-1.5 text-sm outline-none hover:bg-accent hover:text-accent-foreground">
            <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            <span>Open documentation</span>
          </div>
          <div class="relative flex cursor-default select-none items-center rounded-sm px-2 py-1.5 text-sm outline-none hover:bg-accent hover:text-accent-foreground">
            <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
            </svg>
            <span>View components</span>
          </div>
          <div class="relative flex cursor-default select-none items-center rounded-sm px-2 py-1.5 text-sm outline-none hover:bg-accent hover:text-accent-foreground">
            <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"></path>
            </svg>
            <span>Go to dashboard</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Command Palette functionality
    const searchButton = document.querySelector('button[class*="relative w-full justify-start"]');
    const commandPalette = document.getElementById('command-palette');
    
    // Show command palette on search click
    if (searchButton && commandPalette) {
      searchButton.addEventListener('click', () => {
        commandPalette.classList.remove('hidden');
      });
    }

    // Hide command palette on escape or outside click
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && commandPalette && !commandPalette.classList.contains('hidden')) {
        commandPalette.classList.add('hidden');
      }
      
      // Show on Cmd+K
      if ((e.metaKey || e.ctrlKey) && e.key === 'k') {
        e.preventDefault();
        if (commandPalette) {
          commandPalette.classList.remove('hidden');
        }
      }
    });

    if (commandPalette) {
      commandPalette.addEventListener('click', (e) => {
        if (e.target === commandPalette) {
          commandPalette.classList.add('hidden');
        }
      });
    }

    // Tab switching functionality
    const tabs = document.querySelectorAll('[id^="tab-"]');
    tabs.forEach(tab => {
      tab.addEventListener('click', () => {
        // Remove active state from all tabs
        tabs.forEach(t => {
          t.classList.remove('data-[state=active]:bg-background', 'data-[state=active]:text-foreground', 'data-[state=active]:shadow', 'border-b-2', 'border-b-primary', 'bg-background', 'text-foreground', 'shadow');
          t.classList.add('border-b-transparent');
        });
        
        // Add active state to clicked tab
        tab.classList.add('border-b-2', 'border-b-primary', 'bg-background', 'text-foreground', 'shadow');
        tab.classList.remove('border-b-transparent');
      });
    });

    // Theme toggle functionality
    const themeToggle = document.getElementById('theme-toggle');
    const html = document.documentElement;
    
    // Check for saved theme or default to light
    const savedTheme = localStorage.getItem('theme') || 'light';
    html.classList.toggle('dark', savedTheme === 'dark');
    
    if (themeToggle) {
      themeToggle.addEventListener('click', () => {
        const isDark = html.classList.contains('dark');
        html.classList.toggle('dark', !isDark);
        localStorage.setItem('theme', isDark ? 'light' : 'dark');
      });
    }
  </script>
</Layout>