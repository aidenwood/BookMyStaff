---
export const prerender = true;

import Layout from '../layouts/Layout.astro';
import Header from '../components/Layout/Header';
import DemoAccordion from '../components/DemoAccordion';
import '../styles/global.css';
---

<Layout title="BookMyStaff - Professional Booking Platform for Mobile Businesses">
  <Header client:load />
  <main class="min-h-screen bg-white">
    <!-- Hero Section -->
    <section class="relative py-20 px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto text-center">
        <div class="inline-flex items-center gap-2 bg-gray-100 text-gray-800 px-4 py-2 rounded-full text-sm font-medium mb-8">
          <span class="w-2 h-2 bg-green-500 rounded-full"></span>
          Now available for mobile businesses
        </div>
        
        <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold text-gray-900 mb-8 leading-tight">
          Smart booking for
          <span class="bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent"> mobile teams</span>
        </h1>
        
        <p class="text-xl text-gray-600 mb-10 max-w-2xl mx-auto leading-relaxed">
          Coordinate staff across regions, maximize efficiency, and scale your mobile service business with intelligent scheduling.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-16">
          <a href="/setup" class="inline-flex items-center justify-center px-8 py-3 bg-gray-900 text-white rounded-lg font-medium hover:bg-gray-800 transition-colors shadow-lg">
            Get started
          </a>
          <a href="#features" class="inline-flex items-center justify-center px-8 py-3 bg-white text-gray-900 rounded-lg font-medium border border-gray-200 hover:bg-gray-50 transition-colors">
            View features
          </a>
        </div>
      </div>
    </section>

    <!-- Features Demo Section -->
    <section id="features" class="py-20 bg-gray-50">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            See how it works
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Explore the key features that make BookMyStaff the perfect solution for mobile businesses.
          </p>
        </div>
        
        <div class="max-w-4xl mx-auto">
          <DemoAccordion client:load />
        </div>
      </div>
    </section>

    <!-- Social Proof -->
    <section class="py-16 bg-white">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <p class="text-gray-600 text-lg mb-8">Trusted by mobile businesses across Australia</p>
          <div class="grid grid-cols-2 md:grid-cols-4 gap-8 items-center opacity-60">
            <div class="text-center">
              <div class="font-bold text-2xl text-gray-900">200+</div>
              <div class="text-sm text-gray-600">Active Businesses</div>
            </div>
            <div class="text-center">
              <div class="font-bold text-2xl text-gray-900">50k+</div>
              <div class="text-sm text-gray-600">Bookings Managed</div>
            </div>
            <div class="text-center">
              <div class="font-bold text-2xl text-gray-900">85%</div>
              <div class="text-sm text-gray-600">Efficiency Increase</div>
            </div>
            <div class="text-center">
              <div class="font-bold text-2xl text-gray-900">4.9★</div>
              <div class="text-sm text-gray-600">Average Rating</div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Call to Action -->
    <section class="py-20 bg-gray-900">
      <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
          Ready to get started?
        </h2>
        <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
          Join mobile businesses already using BookMyStaff to coordinate teams and maximize efficiency.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/setup" class="inline-flex items-center justify-center px-8 py-3 bg-white text-gray-900 rounded-lg font-medium hover:bg-gray-100 transition-colors">
            Start free trial
          </a>
          <a href="#features" class="inline-flex items-center justify-center px-8 py-3 bg-transparent text-white rounded-lg font-medium border border-gray-600 hover:bg-gray-800 transition-colors">
            Learn more
          </a>
        </div>
        <p class="text-sm text-gray-400 mt-6">No credit card required • 14-day free trial</p>
      </div>
    </section>
  </main>

  <!-- Simple Footer -->
  <footer class="bg-white border-t border-gray-200 py-12">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <div class="mb-6 md:mb-0">
          <h3 class="text-gray-900 font-bold text-lg">BookMyStaff</h3>
          <p class="text-sm text-gray-600 mt-1">Smart booking for mobile teams</p>
        </div>
        
        <div class="flex flex-col sm:flex-row gap-8 text-sm">
          <div class="flex gap-6">
            <a href="/features" class="text-gray-600 hover:text-gray-900">Features</a>
            <a href="/pricing" class="text-gray-600 hover:text-gray-900">Pricing</a>
            <a href="/contact" class="text-gray-600 hover:text-gray-900">Contact</a>
          </div>
          <div class="flex gap-6">
            <a href="/privacy" class="text-gray-600 hover:text-gray-900">Privacy</a>
            <a href="/terms" class="text-gray-600 hover:text-gray-900">Terms</a>
          </div>
        </div>
      </div>
      
      <div class="border-t border-gray-200 mt-8 pt-8 text-center">
        <p class="text-sm text-gray-500">&copy; 2024 BookMyStaff. All rights reserved.</p>
      </div>
    </div>
  </footer>
</Layout>