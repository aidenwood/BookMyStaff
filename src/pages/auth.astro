---
import Layout from '../layouts/Layout.astro'
import AuthContainer from '../components/Auth/AuthContainer'

const { url } = Astro
const searchParams = new URLSearchParams(url.search)
const mode = searchParams.get('mode') || 'login'
const redirectTo = searchParams.get('redirectTo') || '/'
---

<Layout title={mode === 'login' ? 'Sign In' : 'Sign Up'}>
  <div class="min-h-screen bg-white">
    <div class="flex min-h-screen">
      <!-- Left Side - Black Background -->
      <div class="hidden lg:flex lg:w-1/2 bg-black relative overflow-hidden">
        <div class="relative z-10 flex flex-col justify-center px-12 text-white">
          <div class="text-center">
            <h1 class="text-4xl font-bold mb-4">BookMyStaff</h1>
            <p class="text-xl opacity-90">
              Streamline your business operations with intelligent staff scheduling and customer booking management.
            </p>
          </div>
        </div>
      </div>
      
      <!-- Right Side - Auth Form -->
      <div class="flex-1 flex items-center justify-center p-8">
        <div class="w-full max-w-md">
          <AuthContainer initialMode={mode} redirectTo={redirectTo} client:load />
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  /* Custom gradient background */
  .bg-gradient-to-br {
    background: linear-gradient(135deg, rgb(59, 130, 246), rgb(79, 70, 229));
  }
</style>